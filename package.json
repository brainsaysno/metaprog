{
  "name": "metaprog",
  "version": "1.0.2",
  "description": "An experimental and versatile library for exploring LLM-assisted metaprogramming.",
  "scripts": {
    "build": "tsc",
    "ci": "pnpm run build && pnpm run check-format && pnpm run check-exports && pnpm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "pnpm run ci"
  },
  "keywords": [
    "metaprogramming",
    "ai",
    "llm",
    "gpt",
    "claude",
    "prompt engineering"
  ],
  "author": "Nicol√°s Russo <nrusso@nrusso.dev>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.10",
    "dotenv": "^16.4.7",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.8",
    "@langchain/core": "^0.3.18",
    "@langchain/ollama": "^0.1.4",
    "@langchain/openai": "^0.3.16",
    "nanoid": "^5.0.8",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  }
}
